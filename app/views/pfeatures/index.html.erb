<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_pfeature_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Pfeatures</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @pfeatures %>
  </div>

  <div class="col-sm-2 ">
    <%= page_entries_info @pfeatures, :entry_name => 'item' %>
  </div>

</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>Fdate</th>
      <th>Active status</th>
      <th>Sort order</th>
    </tr>
  </thead>

  <tbody>
    <% @pfeatures.each do |pfeature| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', pfeature, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_pfeature_path(pfeature), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <% #commentedout  = link_to 'Destroy', pfeature, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>

        <td><%= pfeature.name %></td>
        <td><%= pfeature.fdate %></td>
        <td><%= pfeature.active_status %></td>
        <td><%= pfeature.sort_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Home', '/', class: "btn btn-default" %>
