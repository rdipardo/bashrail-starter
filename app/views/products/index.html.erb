<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_product_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Products</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @products %>
  </div>

  <div class="col-sm-2 ">
    <%= page_entries_info @products, :entry_name => 'item' %>
  </div>

</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>Pcolor</th>
      <th>Country of origin</th>
      <th>Pdate</th>
      <th>Active status</th>
      <th>Sort order</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', product, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <% #commentedout  = link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>

        <td><%= product.name %></td>
        <td><%= product.pcolor %></td>
        <td><%= product.country_of_origin.try(:name) %></td>
        <td><%= product.pdate %></td>
        <td><%= product.active_status %></td>
        <td><%= product.sort_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Home', '/', class: "btn btn-default" %>
