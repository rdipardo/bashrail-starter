
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_role_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Roles</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @roles %>
  </div>

  <div class="col-sm-2 ">
    <%= page_entries_info @roles, :entry_name => 'item' %>
  </div>

</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>Description</th>
      <th>Active status</th>
      <th>Sort</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', role, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_role_path(role), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <% #commentedout  = link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>

        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= role.active_status %></td>
        <td><%= role.sort_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
